sudo apt install vim git

ssh-keygen -t ed25519
eval "$(ssh-agent -s)"

vim $HOME/.ssh/config

```
Host github.com
  IdentityFile $HOME/.ssh/id_ed25519
```

ssh-add

# Add SSH key to Github Account


cd && mkdir code && cd code && git clone git@github.com:jerrikneri/dotfiles.git && cd dotfiles/ && cp .env.example .env

echo "source $HOME/code/dotfiles/.index" >> $HOME/.bashrc
source $HOME/.bashrc

cd $HOME/code && git clone git@github.com:jerrikneri/homelab.git

