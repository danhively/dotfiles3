ssh-keygen -t ed25519
eval "$(ssh-agent -s)"


cd && mkdir code && cd code && git clone git@github.com:jerrikneri/dotfiles.git && cd dotfiles/ && cp .env.example .env

echo "source ~/code/dotfiles/.index" >> ~/.bashrc
source ~/.bashrc

cd ~/code && git clone git@github.com:jerrikneri/homelab.git


# Linux Homebrew
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
brew install helm neovim ripgrep k9s newsboat

# LazyVim 
~/.config/nvim{,.bak}
git clone https://github.com/LazyVim/starter ~/.config/nvim
