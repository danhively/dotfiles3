#Keyboard
alias qmk="cd ~/Keyboard/QMK"
function build() {
	 qmk && make $1/$2:$1-grid-JERRIK:dfu
}
function kb() {
   if [ $1 = "hhkb" ]; then
    qmk && cd keyboards/$1/keymaps/$1-JERRIK
   else
	  cd ~/Keyboard/QMK/keyboards/$1/keymaps/$1-grid-JERRIK
   fi
}


