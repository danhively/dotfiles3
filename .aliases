alias migrate-main="php artisan migrate --path=database/migrations/main"
alias route="php artisan route:list | grep "
function migrate-tenant(){
  if [ -z "$1" ]
  then
    echo "Tenant DB name required."
  else
    php artisan migrate:tenants --tenantdb=$1
  fi
}

